<Panel title="Object selector" min_size="200,500">
	<VBox name="vertical_wrapper" hexpand="True" vexpand="True" padding="5">
		<VBox vexpand="False" hexpand="True">
			<Button name="toggle_mode" text="Toggle Mode" />
			<HBox>
				<TextField name="search_field" />
				<Button name="search_button" text="Search" hexpand="False"/>
			</HBox>
		</VBox>
	
		<ScrollArea vexpand="True" name="namespace_area">
			<ListBox name="namespace_list" />		
		</ScrollArea>

		<VBox name="text_mode_wrapper" hexpand="True" vexpand="True">
			<ScrollArea name="object_area" horizontal_scrollbar="0" hexpand="True" vexpand="True">
				<ListBox name="object_list" />
			
			</ScrollArea>
			<Spacer size="1,0"/>
			<Container size="150,150" position_technique="center:center" max_size="150,150" min_size="150,150" vexpand="False" border_size="2" base_color="50,50,50" opaque="1" >
				<Icon name="preview_icon" />
			</Container>
		</VBox>
		<VBox name="image_mode_wrapper" vexpand="True" hexpand="True">
			<ScrollArea name="object_area" horizontal_scrollbar="0" hexpand="True" vexpand="True">
				<VBox name="object_list" />
			</ScrollArea>
		</VBox>
	</VBox>
	<HBox name="horizontal_wrapper" hexpand="True" vexpand="True" padding="5">
		<VBox hexpand="True" vexpand="True" max_size="200,200" size="200,200">
			<Button name="toggle_mode" text="Toggle Mode" />
			<HBox>
				<TextField name="search_field" />
				<Button name="search_button" text="Search" hexpand="0"/>
			</HBox>
		
			<ScrollArea name="namespace_area">
				<ListBox name="namespace_list" />		
			</ScrollArea>
		</VBox>

		<HBox name="text_mode_wrapper">
			<ScrollArea name="object_area" horizontal_scrollbar="0" hexpand="True" >
				<ListBox name="object_list" />
			
			</ScrollArea>
			<Container size="150,150" max_size="150,150" min_size="150,150" vexpand="False" base_color="50,50,50" opaque="1" >
				<Icon name="preview_icon" />
			</Container>
		</HBox>
		<HBox name="image_mode_wrapper" padding="2" hexpand="True" vexpand="True">
			<ScrollArea name="object_area" vertical_scrollbar="0">
				<HBox name="object_list" />
			</ScrollArea>
		</HBox>
	</HBox>
</Panel>
